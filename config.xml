<?xml version='1.0' encoding='utf-8'?>
<widget id="com.wGuiGhostFarms_9861566" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>GuiGhost Farms</name>
    <description>
        Free to Play Farming Simulation game
    </description>
    <author email="info@guighost.com" href="http://guighost.com">
        GuiGhost Games
    </author>
    <content src="index.html" />
    <access origin="*" />
	<icon src="ico/icon.png" />
	<platform name="android">
		<preference name="Fullscreen" value="true" />
		     <!--
            ldpi    : 36x36 px
            mdpi    : 48x48 px
            hdpi    : 72x72 px
            xhdpi   : 96x96 px
            xxhdpi  : 144x144 px
            xxxhdpi : 192x192 px
        -->
		<icon src="ico/icon36.png" density="ldpi" />
        <icon src="ico/icon48.png" density="mdpi" />
        <icon src="ico/icon72.png" density="hdpi" />
        <icon src="ico/icon96.png" density="xhdpi" />
        <icon src="ico/icon144.png" density="xxhdpi" />
        <icon src="ico/icon192.png" density="xxxhdpi" />
		
		
		
	</platform>
 <feature name="Device">
		<param name="android-package" value="org.apache.cordova.device.Device" />
	</feature>

	<preference name="KeepRunning" value="false"/>
<preference name="LoadUrlTimeoutValue" value="10000"/>
<preference name="InAppBrowserStorageEnabled" value="true"/>
<preference name="LoadingDialog" value="My Title,My Message"/>
<preference name="ShowTitle" value="true"/>
<preference name="AndroidLaunchMode" value="singleTop"/>
<preference name="DefaultVolumeStream" value="call" />
<preference name="DisallowOverscroll" value="true"/>
<preference name="Fullscreen" value="true" />
<preference name="BackgroundColor" value="0xff0000ff"/>
<preference name="HideKeyboardFormAccessoryBar" value="true"/>
<preference name="Orientation" value="portrait" />
<preference name="android-minSdkVersion" value="17" />
	
</widget>
