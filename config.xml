<?xml version='1.0' encoding='utf-8'?>
<widget id="com.wGuiGhostFarms_9861566" version="1.0.0" android-packageName="com.wGuiGhostFarms_9861566" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" >
    <name>Medieval Farms</name>
    <description>
       Retro Farming Sim
    </description>
    <author email="info@guighost.com" href="http://guighost.com">
        GuiGhost Games
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-enhance" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="orientation" value="portrait" />
        <icon src="images/UI/homeButton512.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="android-targetSdkVersion" value="28"/>
</widget>
