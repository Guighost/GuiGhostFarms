<?xml version='1.0' encoding='utf-8'?>
<widget id="com.wMedievalFarms_GuiGhostGames" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <feature name="FBANFree">
        <param name="android-package" value="fban.plugin.FBANFree" />
    </feature>
    <feature name="AppodealPrime">
        <param name="android-package" value="com.appodealprime.AppodealPrime" />
    </feature>
    <feature name="InAppBrowser">
        <param name="android-package" value="org.apache.cordova.inappbrowser.InAppBrowser" />
    </feature>
    <feature name="Market">
        <param name="android-package" value="com.xmartlabs.cordova.market.Market" />
    </feature>
    <name>Medieval Farms</name>
    <description>
     Retro Farming Sim with unique gameplay
    </description>
    <author email="info@guighost.com" href="http://guighostgames.com">
		GuiGhost Games
    </author>
    <gap:plugin name="org.apache.cordova.geolocation" />
    <gap:plugin name="org.apache.cordova.device-orientation" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="market:*" />
    <icon src="icon.png" />
    <preference default="27+" name="ANDROID_SUPPORT_RECYCLERVIEW_VERSION" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="orientation" value="portrait" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="true" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-targetSdkVersion" value="28" />
    <preference name="KeepRunning" value="true" />
    <preference name="InAppBrowserStorageEnabled" value="true" />
    <preference name="AndroidLaunchMode" value="singleTop" />
    <preference name="DefaultVolumeStream" value="call" />
</widget>
